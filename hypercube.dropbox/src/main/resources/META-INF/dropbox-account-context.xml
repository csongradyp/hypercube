<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.2.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <bean id="propertyPlaceholderConfig" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="locations">
            <list>
                <value>classpath*:auth.properties</value>
            </list>
        </property>
    </bean>

    <bean parent="daos" class="com.noe.hypercube.collector.DaoCollector">
        <constructor-arg>
            <list merge="true">
                <bean class="com.noe.hypercube.dao.DbxEntityDao"/>
                <bean class="com.noe.hypercube.dao.DbxMappingDao"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="dropbox.clients" parent="clients" class="com.noe.hypercube.collector.ClientCollector">
        <constructor-arg>
            <list merge="true">
                <ref bean="dbxClient"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="dropbox.mappers" parent="mappers" class="com.noe.hypercube.collector.MapperCollector">
        <constructor-arg>
            <list>
                <ref bean="dbxDirectoryMapper"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="dropbox.entityFactories" parent="entityFactories" class="com.noe.hypercube.collector.EntityFactoryCollector">
        <constructor-arg>
            <list>
                <ref bean="dbxFileEntityFactory"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="dropbox.accountProperties" parent="accountProperties" class="com.noe.hypercube.collector.AccountPropertiesCollector">
        <constructor-arg>
            <list merge="true">
                <!--<util:properties location="dropbox.properties" />-->
            </list>
        </constructor-arg>
    </bean>

    <bean id="authentication" class="com.noe.hypercube.Authentication"/>

    <bean id="dbxClient" class="com.noe.hypercube.service.DbxClientWrapper">
        <constructor-arg>
            <bean class="com.dropbox.core.DbxClient">
                <constructor-arg index="0" ref="config"/>
                <constructor-arg index="1" value="${accessToken}"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="dbxDirectoryMapper" class="com.noe.hypercube.mapping.DbxDirectoryMapper"/>

    <bean id="config" class="com.dropbox.core.DbxRequestConfig">
        <constructor-arg value="HyperCube/0.0.1"/>
        <constructor-arg value="en"/>
    </bean>

    <bean id="dbxWebAuth" class="com.dropbox.core.DbxWebAuthNoRedirect">
        <constructor-arg ref="config"/>
        <constructor-arg ref="appInfo"/>
    </bean>

    <bean id="appInfo" class="com.dropbox.core.DbxAppInfo">
        <constructor-arg value="${app.key}"/>
        <constructor-arg value="${app.secret}"/>
    </bean>

    <bean id="dbxFileEntityFactory" class="com.noe.hypercube.domain.DbxFileEntityFactory"/>

</beans>
