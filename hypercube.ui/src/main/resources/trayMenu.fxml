<?xml version="1.0" encoding="UTF-8"?>

<?import com.noe.hypercube.ui.tray.menu.StateInfoLabel?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.SegmentedButton?>
<fx:root type="javafx.scene.layout.AnchorPane" minHeight="300.0" minWidth="300.0" prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <SegmentedButton fx:id="accounts" nodeOrientation="LEFT_TO_RIGHT" prefHeight="30.0" prefWidth="300.0"/>
        <ListView fx:id="lastSynchList" fixedCellSize="40.0" focusTraversable="false" prefHeight="250.0" prefWidth="300.0" VBox.vgrow="ALWAYS"/>
        <HBox alignment="CENTER" prefHeight="25.0" prefWidth="300.0" VBox.vgrow="NEVER">
            <Button fx:id="exit" contentDisplay="CENTER" textAlignment="CENTER"/>
            <StateInfoLabel fx:id="info" prefHeight="20.0" prefWidth="240.0" graphicTextGap="5" stylesheets="style/info.css">
                <padding><Insets left="5" right="5"/></padding>
            </StateInfoLabel>
            <Button fx:id="show" contentDisplay="CENTER" textAlignment="CENTER" defaultButton="true"/>
            <Button fx:id="settings" contentDisplay="CENTER" textAlignment="CENTER"/>
        </HBox>
    </VBox>
</fx:root>
