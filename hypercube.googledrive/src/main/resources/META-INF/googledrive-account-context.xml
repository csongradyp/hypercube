<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="drive.daos" parent="daos" class="com.noe.hypercube.collector.DaoCollector">
        <constructor-arg>
            <list>
                <bean class="com.noe.hypercube.googledrive.dao.DriveFileEntryDao"/>
                <bean class="com.noe.hypercube.googledrive.dao.DriveMappingDao"/>
            </list>
        </constructor-arg>
    </bean>

    <bean parent="accountBoxCollection" class="com.noe.hypercube.collector.AccountBoxCollector">
        <constructor-arg>
            <list merge="true">
                <ref bean="drive.AccountBox"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="drive.AccountBox" class="com.noe.hypercube.domain.AccountBox">
        <constructor-arg ref="driveClient"/>
        <constructor-arg ref="driveDirectoryMapper"/>
        <constructor-arg ref="driveFileEntityFactory"/>
        <constructor-arg ref="persistenceController"/>
    </bean>

    <bean id="driveClient" class="com.noe.hypercube.googledrive.service.DriveClient" />
    <bean id="driveDirectoryMapper" class="com.noe.hypercube.googledrive.mapping.DriveDirectoryMapper" />
    <bean id="driveFileEntityFactory" class="com.noe.hypercube.googledrive.domain.DriveFileEntityFactory" />

</beans>
